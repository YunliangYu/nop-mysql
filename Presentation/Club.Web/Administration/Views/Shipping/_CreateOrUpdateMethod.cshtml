@model ShippingMethodModel

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    @(Html.LocalizedEditor<ShippingMethodModel, ShippingMethodLocalizedModel>("shipping-method-localized",
                    @<div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.SiteLabelFor(model => model.Locales[item].Name)
                            </div>
                            <div class="col-md-9">
                                @Html.SiteEditorFor(model => model.Locales[item].Name)
                                @Html.ValidationMessageFor(model => model.Locales[item].Name)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.SiteLabelFor(model => model.Locales[item].Description)
                            </div>
                            <div class="col-md-9">
                                @Html.SiteTextAreaFor(model => model.Locales[item].Description)
                                @Html.ValidationMessageFor(model => model.Locales[item].Description)
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.Locales[item].LanguageId)
                    </div>
    ,
                    @<div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.SiteLabelFor(model => model.Name)
                            </div>
                            <div class="col-md-9">
                                @Html.SiteEditorFor(model => model.Name, required: true)
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.SiteLabelFor(model => model.Description)
                            </div>
                            <div class="col-md-9">
                                @Html.SiteTextAreaFor(model => model.Description)
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                        </div>
                    </div>
    ))
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.SiteLabelFor(model => model.DisplayOrder)
                        </div>
                        <div class="col-md-9">
                            @Html.SiteEditorFor(model => model.DisplayOrder)
                            @Html.ValidationMessageFor(model => model.DisplayOrder)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>