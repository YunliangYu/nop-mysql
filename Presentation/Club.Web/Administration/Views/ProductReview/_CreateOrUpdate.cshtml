@model ProductReviewModel

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.SiteLabelFor(model => model.ProductName)
                        </div>
                        <div class="col-md-9">
                            @Html.ActionLink(Model.ProductName, "Edit", "Product", new { id = Model.ProductId }, new { })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.SiteLabelFor(model => model.StoreName)
                        </div>
                        <div class="col-md-9">
                            @Html.SiteDisplayFor(model => model.StoreName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.SiteLabelFor(model => model.CustomerInfo)
                        </div>
                        <div class="col-md-9">
                            @Html.ActionLink(Model.CustomerInfo, "Edit", "Customer", new { id = Model.CustomerId }, new { })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.SiteLabelFor(model => model.Title)
                        </div>
                        <div class="col-md-9">
                            @if (Model.IsLoggedInAsVendor)
                            {
                                @Html.SiteDisplayFor(model => model.Title)
                            }
                            else
                            {
                                @Html.SiteEditorFor(model => model.Title, required: true)
                                @Html.ValidationMessageFor(model => model.Title)
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.SiteLabelFor(model => model.ReviewText)
                        </div>
                        <div class="col-md-9">
                            @if (Model.IsLoggedInAsVendor)
                            {
                                @Html.Raw(Club.Core.Html.HtmlHelper.FormatText(Model.ReviewText, false, true, false, false, false, false))
                            }
                            else
                            {
                                @Html.SiteTextAreaFor(model => model.ReviewText, required: true)
                                @Html.ValidationMessageFor(model => model.ReviewText)
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.SiteLabelFor(model => model.ReplyText)
                        </div>
                        <div class="col-md-9">
                            @Html.SiteTextAreaFor(model => model.ReplyText)
                            @Html.ValidationMessageFor(model => model.ReplyText)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.SiteLabelFor(model => model.Rating)
                        </div>
                        <div class="col-md-9">
                            @Html.SiteDisplayFor(model => model.Rating)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.SiteLabelFor(model => model.IsApproved)
                        </div>
                        <div class="col-md-9">
                            @if (Model.IsLoggedInAsVendor)
                            {
                                <div class="form-text-row">
                                    @if (Model.IsApproved)
                                    {
                                        <i class="fa fa-check true-icon"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-close false-icon"></i>
                                    }
                                </div>
                            }
                            else
                            {
                                @Html.SiteEditorFor(model => model.IsApproved)
                                @Html.ValidationMessageFor(model => model.IsApproved)
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.SiteLabelFor(model => model.CreatedOn)
                        </div>
                        <div class="col-md-9">
                            @Html.SiteDisplayFor(model => model.CreatedOn)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
